[run]
source = api,config,models,services,scripts
omit = 
    */tests/*
    */venv/*
    */__pycache__/*
    */migrations/*
    */alembic/*

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*Protocol\):
    @(abc\.)?abstractmethod

fail_under = 70

[html]
directory = reports/htmlcov

[xml]
output = reports/coverage.xml
